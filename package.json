{
  "name": "auto-translate-json-library",
  "version": "1.2.2",
  "description": "Automatically translates JSON language files to other languages using Google Translate,AWS,Azure,DeepL or OpenAI",
  "main": "./index.js",
  "types": "./index.d.ts",
  "scripts": {
    "prepare": "tsc",
    "build": "tsc",
    "lint": "rome check ./src",
    "lint-fix": "rome check ./src --apply",
    "lint-fix-all": "rome check --apply-unsafe ./src",
    "format": "rome format ./src",
    "format-fix": "rome format ./src --write",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "start": "ts-node src/index.ts"
  },
  "keywords": [
    "translate",
    "language",
    "json",
    "flutter",
    "angular",
    "ngx-translate",
    "transloco",
    "auto-translate-json",
    "google",
    "Azure",
    "DeepL",
    "OpenAI"
  ],
  "author": "codegrue",
  "repository": {
    "type": "git",
    "url": "https://github.com/topce/auto-translate-json-library"
  },
  "contributors": [
    "codegrue",
    "topce"
  ],
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "@types/jest": "29.5.2",
    "@types/node": "20.3.1",
    "@types/yargs": "17.0.24",
    "husky": "8.0.3",
    "jest": "^29.5.0",
    "prettier": "2.8.8",
    "pretty-quick": "3.1.3",
    "rome": "12.1.3",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "typescript": "5.1.3"
  },
  "dependencies": {
    "@aws-sdk/client-translate": "3.359.0",
    "@google-cloud/translate": "7.2.1",
    "axios": "1.4.0",
    "dotenv": "16.3.1",
    "form-data": "4.0.0",
    "openai": "3.3.0",
    "uuid": "9.0.0",
    "yargs": "17.7.2"
  }
}
